<h2><%= link_to @post.title, @post.link, :target => "blank" %></h2>
<h4>Post a Comment</h4>

<%= bootstrap_form_for @comment, url: post_comments_path do |f| %>
<%= f.text_area :body, :placeholder => "Please Enter A Comment"%>
<%= f.submit %>
<%end%>
<ul class="list">
	<%= render :partial => "comment", :collection => @post.comments %>
</ul>